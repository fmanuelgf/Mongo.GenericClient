{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run docker-compose",
            "type": "shell",
            "command": "docker compose up -d",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run dotnet-nuget-push",
            "type": "shell",
            "command": "dotnet nuget push src/package/Mongo.Generics.${input:nupkg-version}.nupkg --api-key ${input:nupkg-key} --source https://api.nuget.org/v3/index.json",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [] 
        }
    ],
    "inputs": [
        {
            "id": "nupkg-version",
            "description": "Package version?",
            "type": "promptString"
        },
        {
            "id": "nupkg-key",
            "description": "Package key?",
            "type": "promptString"
        }
    ]
}